s=\"cmt-list\" >\r\n      <div class=\"cmt-item\" v-for=\"(item,i) in list\">\r\n        第{{i+1}}楼：{{item.ctime}}\r\n        <div class=\"cmt-body\">\r\n            {{item.content}}\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <mt-button size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport {Toast} from \"mint-ui\"\r\nexport default {\r\n  data(){\r\n    return{\r\n      msg:\"\",\r\n      pageIndex:0,\r\n      //pageCount:0,\r\n      pageSize:7,\r\n      list:[]\r\n    }\r\n  },\r\n  props:[\"id\"],\r\n  created(){\r\n    this.getMore();\r\n  },\r\n  methods:{\r\n    getMore(){\r\n      this.pageIndex++\r\n      var nid=this.id;\r\n      var url=`http://127.0.0.1:3000/getComments?nid=${nid}&pno=${this.pageIndex}&pageSize=${this.pageSize}`;\r\n      this.axios.get(url).then(result=>{\r\n        var sss=this.list.concat(result.data.data);\r\n        this.list=sss;\r\n        console.log(sss);\r\n        //this.pageCount=result.data.pageCount;\r\n      })\r\n    },\r\n    addComment(){\r\n      var nid=this.id;\r\n      var content=this.msg;\r\n      var size=content.trim().length;\r\n      if(size==0){\r\n        var a=Toast(\"评论不能为空\");\r\n        setTimeout(function(){a.close()},800)\r\n        return;\r\n      }else{\r\n      var url=\"http://127.0.0.1:3000/addComment?nid=\"+nid+\"&content=\"+content;\r\n      this.axios.get(url).then(result=>{\r\n        console.log(result);\r\n        if(result.data.code==1){\r\n          var a=Toast(\"评论添加成功\");\r\n          setTimeout(function(){a.close()},800)\r\n          this.msg=\"\";\r\n          this.list=[];\r\n          this.pageIndex=0;\r\n          this.getMore();\r\n        }else{\r\n          var a=Toast(\"添加失败\");\r\n          setTimeout(function(){a.close()},800)\r\n        }\r\n      })\r\n    }\r\n    }\r\n  },\r\n}\r\n</script>\r\n\r\n<style>\r\n  .app-comment h3{\r\n    font-size:18px;\r\n  }\r\n  .app-comment textarea{\r\n    font-size:12px;\r\n    